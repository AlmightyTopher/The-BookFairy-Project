# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# Ollama Configuration (Local Windows Installation)
OLLAMA_URL=http://localhost:11434
OLLAMA_CLASSIFY_MODEL=qwen3:4b
OLLAMA_GENERATE_MODEL=qwen2.5-coder:14b
OLLAMA_FALLBACK_MODEL=gpt-oss:20b

# Readarr Configuration  
READARR_URL=http://localhost:8787
READARR_API_KEY=your_readarr_api_key_here

# Prowlarr Configuration
PROWLARR_URL=http://localhost:9696
PROWLARR_API_KEY=your_prowlarr_api_key_here
PROWLARR_MAM_INDEXER_ID=1

# qBittorrent Configuration
QBITTORRENT_URL=http://localhost:8080
QBITTORRENT_USERNAME=your_qbittorrent_username
QBITTORRENT_PASSWORD=your_qbittorrent_password
QBITTORRENT_CATEGORY=audiobooks
QBITTORRENT_SAVE_PATH=/downloads/audiobooks

# Application Configuration
WEB_PORT=3000
PREFERRED_LANGUAGE=en
AUDIOBOOK_ONLY=true
LOG_LEVEL=info

# Docker Configuration (for containerized deployment)
NODE_ENV=production
HEALTH_CHECK_PORT=3000
PUID=1000
PGID=1000
TZ=America/New_York

# Quick Actions Configuration
OPS_CONTACT=@operations
